<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FluidApp.Welcome" Title="Fluid">
    <Grid>
        <Label Text="Welcome to Fluid" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center" 
               HorizontalOptions="CenterAndExpand" FontSize="20" />
        <Button Text="Do you like to keep processing your information" 
                x:Name="Next" HorizontalOptions="Fill" VerticalOptions="End" Font="20"
                Clicked="Next_Clicked"
                />
    </Grid>
</ContentPage>