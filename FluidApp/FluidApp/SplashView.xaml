<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FluidApp.SplashView" Title="Fluid">
    <ContentPage.BackgroundImage>
        <x:String>splash.jpg</x:String>
    </ContentPage.BackgroundImage>
    <ContentPage.Content>
        <Grid RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width}"
              RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height}">
            <Button Text="Start validation" BorderRadius="10" BorderColor="AliceBlue"
                x:Name="Next" HorizontalOptions="Fill" Margin="10"
                VerticalOptions="End" Font="25"
                Command="{Binding NextSplashHandler}"  />
        </Grid>
    </ContentPage.Content>
</ContentPage>