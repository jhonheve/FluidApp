<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FluidApp.SplashView" Title="Fluid">
    <ContentPage.BackgroundImage>
        <x:String>splash.jpg</x:String>
    </ContentPage.BackgroundImage>
    <ContentPage.Content>
        <Grid RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width}"
              RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height}">

            <StackLayout BackgroundColor="SlateGray"  VerticalOptions="End">
                <Button Text="Continue" x:Name="Next" BackgroundColor="Transparent"
                        HorizontalOptions="CenterAndExpand" Font="20" Margin="5" TextColor="White" FontSize="Medium"                 
                        Command="{Binding  NextSplashHandler}" VerticalOptions="FillAndExpand" 
                     />
            </StackLayout>
         
        </Grid>
    </ContentPage.Content>
</ContentPage>